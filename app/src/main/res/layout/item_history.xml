<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <TextView
            android:id="@+id/textViewCircle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/bg_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/textViewAngka"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Angka: 1"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textViewCircle"
            app:layout_constraintTop_toTopOf="@+id/textViewCircle"
            app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewHukuman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Hukuman: Push up 20 kali"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/textViewCircle"
                app:layout_constraintTop_toBottomOf="@+id/textViewAngka"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/separatorLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewHukuman" />

            <ImageView
                android:id="@+id/icon_Time"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/icon_history"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/separatorLine"
                android:contentDescription="Time icon" />

            <TextView
                android:id="@+id/textViewTanggal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="15 Januari 2025, 15.30"
                android:textSize="12sp"
                android:textColor="#888888"
                app:layout_constraintStart_toEndOf="@+id/icon_Time"
                app:layout_constraintTop_toTopOf="@+id/icon_Time"
                app:layout_constraintBottom_toBottomOf="@+id/icon_Time"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>